<p id="notice"><%= notice %></p>

<h1>Post1s</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post1s.each do |post1| %>
      <tr>
        <td><%= post1.title %></td>
        <td><%= post1.body %></td>
        <td><%= post1.user_id %></td>
        <td><%= link_to 'Show', post1 %></td>
        <td><% if can? :update, post1 %><%= link_to 'Edit', edit_post1_path(post1) %><% end %></td>
        <td><% if can? :destroy, post1 %><%= link_to 'Destroy', post1, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post1', new_post1_path %>
